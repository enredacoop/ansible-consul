default: &default
  adapter: postgresql
  encoding: unicode
  host: localhost
  pool: 5
  username: {{ dbuser }}
  password: {{ dbpassword }}

development: &development
  <<: *default
  database: {{ dbname }}

# The staging, preproduction and production dbs are only needed
# for running rake assets:precompile locally before deploying
staging:
  <<: *development

preproduction:
  <<: *development

production:
  <<: *development

test:
  <<: *default
  database: {{ dbnametest }}
